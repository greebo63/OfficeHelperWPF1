<Window x:Class="OfficeHelperWPF1.Views.EquipmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:OfficeHelperWPF1.ViewModels"
        xmlns:local="clr-namespace:OfficeHelperWPF1.Views"
        mc:Ignorable="d"
        Title="EquipmentWindow" 
        SizeToContent="WidthAndHeight">
    <!--Style="{StaticResource MaterialDesignWindow}"-->
    <Window.Resources>
        <Style x:Key="NameOfChangingProperties" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignTextBlock}">
            <Setter Property="Control.FontSize" Value="17" />
            <Setter Property="Control.Margin" Value="10" />
            <Setter Property="Control.HorizontalAlignment" Value="Right"/>
        </Style>
        <Style x:Key="ChangingProperties" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignTextBox}">
            <Setter Property="Control.FontSize" Value="17" />
            <Setter Property="Control.Margin" Value="10" />
            <Setter Property="Control.Width" Value="220"/>
            <Setter Property="DockPanel.Dock" Value="Left"/>
        </Style>
    </Window.Resources>
    <DockPanel>
        <DockPanel
            DockPanel.Dock="Top">
            <DockPanel
            DockPanel.Dock="Top">
                <Grid
                Width="100"
                DockPanel.Dock="Left">
                    <TextBlock 
                    Text="Название:" 
                    Style="{StaticResource NameOfChangingProperties}"
                />
                </Grid>
                <TextBox 
                Text="{Binding Name}" 
                Style="{StaticResource ChangingProperties}"
            />
            </DockPanel>
            <DockPanel
            DockPanel.Dock="Top">
                <Grid
                Width="100"
                DockPanel.Dock="Left">
                    <TextBlock 
                    Text="Тип:" 
                    Margin="10 0 10 10" 
                    Style="{StaticResource NameOfChangingProperties}"
                    />
                </Grid>
                <TextBox 
                Text="{Binding Type}" 
                Margin="10 0 10 10" 
                Style="{StaticResource ChangingProperties}"/>
            </DockPanel>
            <DockPanel
            DockPanel.Dock="Top">
                <Grid
                    Width="100"
                    DockPanel.Dock="Left">
                    <TextBlock 
                        Margin="10 0 10 10" 
                        Text="Статус:" 
                        Style="{StaticResource NameOfChangingProperties}"
                    />
                </Grid>
                <TextBox 
                    Margin="10 0 10 10" 
                    Text="{Binding Status}" 
                    Style="{StaticResource ChangingProperties}"
                />
            </DockPanel>
        </DockPanel>
        <Button 
            Content="{Binding ButtonText}" 
            HorizontalAlignment="Left" 
            Margin="10" 
            VerticalAlignment="Top" 
            FontSize="17"
            Width="Auto" 
            Height="Auto" 
            Click="Button_Click"
            DockPanel.Dock="Top"
        />
    </DockPanel>
</Window>
